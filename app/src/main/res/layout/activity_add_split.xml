<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/light_background">

    <LinearLayout
        android:weightSum="12"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add Split"
            android:textSize="28sp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:elevation="20dp"
            app:cardBackgroundColor="@color/Dark_background"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <EditText
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Title"
                android:textSize="28sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:elevation="20dp"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="@color/Medium_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="Amount"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"/>

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        android:hint="Rs 500"
                        android:textSize="16sp"
                        android:gravity="bottom"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="Persons"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"/>

                    <EditText
                        android:id="@+id/et_persons"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="left"
                        android:hint="2"
                        android:textSize="16sp"
                        android:gravity="bottom"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="bottom"
                        android:text="Description"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="5dp"/>

                    <EditText
                        android:id="@+id/et_description"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="left"
                        android:hint="I payed the bill etc."
                        android:textSize="16sp"
                        android:gravity="bottom"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_weight="0.5"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_1"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/light_background"
                        android:checked="false"
                        android:text="Aqeel Ijaz"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_2"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:chipBackgroundColor="@color/light_background"
                        android:checked="false"
                        android:text="Usama Rasheed"/>

                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/perPerson"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=""/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/Dark_background"
                android:gravity="center"
                android:text="Payed by You and Split Equally"
                android:onClick="divideEqually"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="20dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/Dark_background"
                android:gravity="center"
                android:text="Back"
                android:onClick="onBack"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>




    </LinearLayout>
</RelativeLayout>